<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yaphet.phone_audio_radio1.activity.Reach_voiceActivity">
    <LinearLayout
        android:gravity="center_vertical"
        android:background="#ff3097fd"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:layout_weight="1"
            android:id="@+id/tv_title_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/search_voice"
            android:textSize="14sp"
            android:clickable="true"
            android:textColor="@drawable/text_color_selectr"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/ic_sousuokuang_selecter"
            android:drawablePadding="3dp"
            android:background="@drawable/ic_search_background"
            />
        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/voice_search"
            android:src="@drawable/voice_empty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/word_searth"
            android:text="搜索"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/certrn_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
    <TextView
        android:id="@+id/Tv_voicesearch_word"
        android:visibility="gone"
        android:text="未找到数据"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Tv_voicesearch_word"
        android:visibility="gone"
        android:indeterminateDrawable="@anim/image_progress"
        android:indeterminateDuration="600"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>

+
</LinearLayout>
